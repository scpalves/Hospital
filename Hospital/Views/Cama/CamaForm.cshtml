@model Hospital.ViewModel.CamaFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Title</h2>



@using (@Html.BeginForm("Save", "Cama"))
{

    @Html.ValidationSummary(true, "Resolva os seguintes erros")

    <div class="form-group">
        @Html.LabelFor(m => m.Cama.Name)
        @Html.TextBoxFor(m => m.Cama.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cama.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cama.TotalCamas)
        @Html.TextBoxFor(m => m.Cama.TotalCamas, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cama.TotalCamas)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Cama.IdServico)
        @Html.DropDownListFor(m => m.Cama.IdServico, new SelectList(Model.Servicos, "Id", "Nome"), "Select Service Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cama.IdServico)
    </div>

  



    @Html.HiddenFor(m => m.Cama.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">
        Save
    </button>

}